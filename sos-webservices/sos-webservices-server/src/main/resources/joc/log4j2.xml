<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<!-- Appender for root logger -->
		<Console name="stdout" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{ISO8601}{Europe/Berlin} %-5p %-16.16t %-44.70c{1.} - %m%n"/>
		</Console>

		<!-- Appender for audit log -->
		<RollingFile name="audit" fileName="logs/JOCAuditLog.log" filePattern="logs/JOCAuditLog.log-%d{yyyy-MM}-%i.log.gz">
			<PatternLayout pattern="%d{ISO8601}{Europe/Berlin} %-5p %m%n%throwable{short}" charset="UTF-8"/>
			<Policies>
				<TimeBasedTriggeringPolicy/>
				<SizeBasedTriggeringPolicy size="250MB"/>
			</Policies>
			<DefaultRolloverStrategy fileIndex="nomax"/>
		</RollingFile>

		<!-- Appender for authentication and session management -->
		<File name="shiro" fileName="logs/JOCShiroLog.log">
			<PatternLayout pattern="%d{ISO8601}{Europe/Berlin} %-5p %m%n" charset="UTF-8"/>
		</File>

		<!-- Appender for database operations -->
		<File name="hibernate" fileName="logs/JOCDBLog.log">
			<PatternLayout pattern="%d{ISO8601}{Europe/Berlin} %-5p %m%n" charset="UTF-8"/>
		</File>
	</Appenders>

	<Loggers>
		<!-- General Loggers - set the following loggers to 'debug' to debug the JOC Cockpit -->
		<Logger name="com.sos" level="info"/>
		<Logger name="org.hibernate.SQL" level="info"/>

		<!-- Apache and Apache Shiro Logs -->
		<Logger name="org.apache.commons" level="error"/>
		<Logger name="org.apache.http" level="error"/>
		<Logger name="org.apache.shiro" level="info"/>
		<Logger name="org.apache.shiro.session.mgt" level="error"/>

		<!-- Logger for hibernate -->
		<Logger name="org.hibernate.hql" level="error"/>
		<Logger name="org.hibernate.event" level="error"/>
		<Logger name="org.hibernate.cfg" level="error"/>
		<Logger name="org.hibernate.type" level="error"/>
		<Logger name="org.hibernate.id" level="error"/>
		<Logger name="org.hibernate.orm.deprecation" level="error"/>
		<Logger name="org.hibernate.engine.transaction.internal.TransactionImpl" level="info"/>

		<!-- Logger for audit log -->
		<Logger name="JOCAuditLog" additivity="false" level="info">
			<AppenderRef ref="audit"/>
		</Logger>

		<!-- Uncomment following logger to activate debug file logging for authentication and session management -->
		<!--
		<Logger name="com.sos.auth" additivity="false" level="debug">
			<AppenderRef ref="shiro"/>
		</Logger>
		-->

		<!-- Uncomment following logger to activate debug file logging for database operations -->
		<!--
		<Logger name="com.sos.hibernate" additivity="false" level="debug">
			<AppenderRef ref="hibernate"/>
		</Logger>
		-->

		<!-- root logger with console appender. All other loggers inherit from this logger. -->
		<Root level="info">
			<AppenderRef ref="stdout"/>
		</Root>
	</Loggers>
</Configuration>