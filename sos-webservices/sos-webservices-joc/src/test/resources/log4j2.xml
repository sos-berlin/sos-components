<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS}[%5p][%t] (%F:%L) - %m%n" />
		</Console>

	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="console" />
		</Root>

		<Logger name="com.sos" level="debug" />

		<Logger name="org.hibernate" level="warn" />
		<Logger name="com.sos.commons.hibernate.id" level="warn" />
		<Logger name="com.sos.commons.hibernate.SOSHibernateFactory"
			level="warn" />
		<Logger name="com.sos.joc.publish" level="info" />
	</Loggers>
</Configuration>