<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="js7_job_documentation_v1.1.xsl "?>
<description xmlns="http://www.sos-berlin.com/schema/js7_job_documentation_v1.1"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:xhtml="http://www.w3.org/1999/xhtml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.sos-berlin.com/schema/js7_job_documentation_v1.1 http://www.sos-berlin.com/schema/js7_job_documentation_v1.1.xsd">

  <job name="SOSMailJob" title="Send Mails" tasks="unbounded">
    <script language="java" java_class="com.sos.jitl.jobs.mail.SOSMailJob" resource="1" />
  </job>
  <releases>
    <release id="1.0" created="2021-05-01" modified="2021-05-01">
      <title>Version 1.0</title>
      <note language="en">
        <div xmlns="http://www.w3.org/1999/xhtml">Initial release</div>
      </note>
    </release>
  </releases>
  <resources>
  </resources>
  <configuration>
    <params id="job_parameter">
      <note language="en">
        <div xmlns="http://www.w3.org/1999/xhtml">The parameters for this job may be set as job or order parameters</div>
      </note>
      <param name="to" required="true">
        <note language="de">
          <div xmlns="http://www.w3.org/1999/xhtml">Mail Empfänger</div>
        </note>
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">mail recipient(s)</div>
        </note>
      </param>
      <param name="from" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">mail sender</div>
        </note>
      </param>
      <param name="from_name" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">name of the sender</div>
        </note>
      </param>
      <param name="reply_to" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">reply address</div>
        </note>
      </param>
      <param name="cc" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">cc recipient(s)</div>
        </note>
      </param>
      <param name="bcc" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">bcc recipient(s)</div>
        </note>
      </param>
      <param name="subject" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">Mail Subject</div>
        </note>
      </param>
      <param name="host" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">mail server host</div>
        </note>
      </param>
      <param name="mail_smtp_port" required="false" default_value="25">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">mail server port</div>
        </note>
      </param>
      <param name="mail_smtp_user" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">smtp username</div>
        </note>
      </param>
      <param name="mail_smtp_password" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">smtp user password</div>
        </note>
      </param>
      <param name="security_protocol" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">smtp user password</div>
        </note>
      </param>
      <param name="body" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">Mail body</div>
        </note>
      </param>
      <param name="content_type" required="false" default_value="text/plain">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">content_type of the mail (text/plain, text/html...)</div>
        </note>
      </param>
      <param name="encoding" required="false" default_value="7bit">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">encoding of the mail (7bit, Quoted-Printable, Base64)</div>
        </note>
      </param>
      <param name="charset" required="false" default_value="iso-8859-1">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">charset of the mail</div>
        </note>
      </param>
      <param name="attachment_content_type" required="false" default_value="application/octet-stream">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">content_type of attachments (application/octet-stream, application/pdf...)</div>
        </note>
      </param>
      <param name="attachment_encoding" required="false" default_value="Base64">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">encoding of attachments (7bit, Quoted-Printable, Base64)</div>
        </note>
      </param>
      <param name="attachment_charset" required="false" default_value="iso-8859-1">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">charset of attachments</div>
        </note>
      </param>
      <param name="attachment" required="false">
        <note language="en">
          <div xmlns="http://www.w3.org/1999/xhtml">Filename and path of the attachment(s) (multiple attachments separated by ";")</div>
        </note>
      </param>
      
  <param name="credential_store_file" required="false">
       
        <note language="en">
        <div xmlns="http://www.w3.org/1999/xhtml">
        
        <title>Location of the Credential Store file</title>
          <p>
            The name of the keepass file that contains the credentials for the access to the database.
          </p>
          <p>
            Alternatively it is possible to specify the value in the url with ?file=
          </p>
          </div>
        </note>
      </param>
	  
    <param name="credential_store_key_file" required="false">
       
        <note language="en">
        <div xmlns="http://www.w3.org/1999/xhtml">
        
        <title>Location of the Credential Store file</title>
          <p>
            The name of the keepass key file that contains the key for the credentials for the access to the database (if a key file is assigned to the keepass file). When no keepass key file is given, the file name is build with the name of the keepass file with changing the extension to .key.
          </p>
          <p>
            Alternatively it is possible to specify the value in the url with ?keyfile=
          </p>
          </div>
        </note>
      </param>
	  
    <param name="credential_store_entry_path" required="false">
        
        <note language="en">
        <div xmlns="http://www.w3.org/1999/xhtml">        
        <title>Path for the entries in the keepass file</title>
          <p>
           To speciy a path for all entries. This makes the values for e.g. the password shorter.
		   Example: 
		 
		   credential_store_entry_path=/sos/scheduler
		   value for password: cs://myMail
		   In the keepass file you find the entry in /sos/scheduler/myMail
		   
          </p>
          <p>
            Alternatively it is possible to specify the value in the url with ?entry_path=
          </p>
          </div>
        </note>
      </param>
      
      
    </params>
    <payload>
      <params reference="params" />
    </payload>
    <settings>
    </settings>
  </configuration>
  <documentation language="en">
    <div xmlns="http://www.w3.org/1999/xhtml">
      This job is used to send emails.  
    </div>
  </documentation>
</description>

