    <job name="FileNotExistsJob" 
    	tasks="unbounded" 
    	title="check for file absence" 
    	>
        <script language="java" java_class="com.sos.jitl.jobs.file.FileNotExistsJob" resource="1" />
    </job>

    <releases>
		<release id="1.0" created="2021-04-23" modified="2021-04-23">
