{
  "title": "DaysOfMonth for MonthDays or Ultimos",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.calendar.MonthDays",
  "type": "object",
  "anyOf": [
    { "required": ["days"] },
    { "required": ["weeklyDays"] }
  ],
  "properties": {
    "from": {
      "$ref": "../common/date-schema.json"
    },
    "to": {
      "$ref": "../common/date-schema.json"
    },
    "days": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "dayOfMonth-schema.json"
      }
    },
    "weeklyDays": {
      "type": "array",
      "minItems": 1,
      "items": {
        "javaType": "com.sos.joc.model.calendar.WeeklyDay",
        "type": "object",
        "required": [
          "day",
          "weekOfMonth"
        ],
        "properties": {
          "day": {
            "$ref": "dayOfWeek-schema.json"
          },
          "weekOfMonth": {
            "type" : "integer",
            "minimum": 1,
            "maximum": 5
          }
        }
      }
    }
  }
}
