{
  "title": "components",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.jobscheduler.Components",
  "type": "object",
  "required": [
    "deliveryDate",
    "joc",
    "database",
    "masters"
  ],
  "properties": {
    "deliveryDate": {
      "$ref": "../common/deliveryDate-schema.json"
    },
    "joc": {
      "type": "object",
      "javaType": "com.sos.joc.model.joc.Cockpit",
      "required": [
        "version",
        "componentState"
      ],
      "properties": {
        "version": {
          "type": "string"
        },
        "componentState": {
          "$ref": "componentState-schema.json"
        }
      }
    },
    "database": {
      "type": "object",
      "javaType": "com.sos.joc.model.joc.DB",
      "required": [
        "dbms",
        "version",
        "componentState",
        "connectionState"
      ],
      "properties": {
        "dbms": {
          "javaType": "com.sos.joc.model.joc.Dbms",
          "type": "string",
          "enum": [
            "SQL Server",
            "MySQL",
            "Oracle",
            "PostgreSQL"
          ]
        },
        "version": {
          "type": "string"
        },
        "componentState": {
          "$ref": "componentState-schema.json"
        },
        "connectionState": {
          "$ref": "connectionState-schema.json"
        }
      }
    },
    "masters": {
      "type": "array",
      "items": {
        "$ref": "master-schema.json"
      }
    },
    "clusterState": {
      "$ref": "clusterState-schema.json"
    }
  }
}
