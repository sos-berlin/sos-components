{
  "title": "modify order command",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.order.StartOrder",
  "type": "object",
  "required": [
    "orderId",
    "workflowPath"
  ],
  "properties": {
    "orderId": {
      "type": "string",
      "pattern": "^[^<>]*$",
      "maxLength": 30
    },
    "workflowPath": {
      "$ref": "../common/path-schema.json"
    },
    "scheduledFor": {
      "$ref": "../common/timestampWithNow-schema.json"
    },
    "timeZone": {
      "description": "see https://en.wikipedia.org/wiki/List_of_tz_database_time_zones",
      "$ref": "../common/string255-schema.json"
    },
    "arguments": {
      "$ref": "../../../jobscheduler/schemas/common/variables-schema.json"
    }
  }
}
