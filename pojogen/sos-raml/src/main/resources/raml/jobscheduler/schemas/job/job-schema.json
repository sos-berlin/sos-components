{
  "title": "job",
  "id": "schemas/job/job",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.jobscheduler.model.job.Job",
  "type": "object",
  "required": [
    "agentRefPath",
    "executable"
  ],
  "properties": {
    "agentRefPath": {
	  "$ref": "../common/path-schema.json"
	},
	"executable": {
	  "$ref": "executableScript-schema.json"
	},
    "returnCodeMeaning": {
      "$ref": "jobReturnCode-schema.json"
    },
    "taskLimit": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "defaultArguments": {
      "$ref": "../common/variables-schema.json"
    }
  },
  "additionalProperties": false
}