{
  "title": "job",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.jobscheduler.model.job.Job",
  "type": "object",
  "javaInterfaces" : [
    "com.sos.joc.model.common.IConfigurationObject"
  ],
  "required": [
    "agentName",
    "executable",
    "taskLimit"
  ],
  "properties": {
    "agentName": {
	  "$ref": "../../../joc/schemas/common/string255-schema.json"
	},
	"executable": {
	  "$ref": "executableScript-schema.json"
	},
    "returnCodeMeaning": {
      "$ref": "jobReturnCode-schema.json"
    },
    "taskLimit": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "timeout": {
      "$ref": "../../../joc/schemas/common/nonNegativeInteger-schema.json"
    },
    "graceTimeout": {
      "$ref": "../../../joc/schemas/common/nonNegativeInteger-schema.json"
    },
    "jobClass": {
      "$ref": "../../../joc/schemas/common/path-schema.json"
    },
    "defaultArguments": {
      "$ref": "../common/variables-schema.json"
    },
    "title": {
      "$ref": "../../../joc/schemas/common/string255-schema.json"
    },
    "documentationId": {
      "$ref": "../../../joc/schemas/common/nonNegativeLong-schema.json"
    },
    "logLevel": {
      "$ref": "../../../joc/schemas/inventory/common/jobLogLevel-schema.json"
    },
    "criticality": {
      "$ref": "../../../joc/schemas/inventory/common/jobCriticality-schema.json"
    },
    "path": {
      "$ref": "../../../joc/schemas/common/path-schema.json"
    }
  },
  "additionalProperties": false
}