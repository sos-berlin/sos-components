  "required": [
  	"branches"
  ],
  "extends" : {
    "$ref": "instruction-schema.json"
  },
  
  "description": "instruction with fixed property 'TYPE':'Fork'",
  "properties": {
  	"branches": {
      "type": "array",
      "items": {
        "type": "object",
        "javaType": "com.sos.jobscheduler.model.workflow.Branch",
        "required": [
          "id",
          "workflow"
        ],
        "properties": {
          "id": {
          	"type": "string",
          	"maxLength": 10
          },
          "workflow": {
            "$ref": "instructions-schema.json"
          }
        },
    	"additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
