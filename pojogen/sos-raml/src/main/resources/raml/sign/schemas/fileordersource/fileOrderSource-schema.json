{
  "title": "FileOrderSource",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.sign.model.fileordersource.FileOrderSource",
  "type": "object",
  "javaInterfaces" : [
    "com.sos.joc.model.common.IDeployObject"
  ],
  "required": [
    "TYPE",
    "id",
    "workflowPath",
    "agentId",
    "directory"
  ],
  "propertyOrder": [
    "TYPE",
    "id",
    "workflowPath",
    "agentId",
    "pattern",
    "orderIdExpression",
    "delay"
  ],
  
  "description": "deploy object with fixed property 'TYPE':'FileWatch'",
  "properties": {
    "TYPE": {
      "$ref": "../../../inventory/schemas/deploy/deployType-schema.json",
      "default": "FileWatch" 
    },
    "id": {
      "$ref": "../../../inventory/schemas/common/string255Required-schema.json"
    },
    "workflowPath": {
      "$ref": "../../../inventory/schemas/common/string255Required-schema.json"
    },
    "agentId": {
    	"$ref": "../../../inventory/schemas/common/string255Required-schema.json"
    },
    "directory": {
    	"$ref": "../../../inventory/schemas/common/string255Required-schema.json"
    },
    "pattern": {
    	"type": "string"
    },
    "timeZone": {
		"type": "string",
        "pattern": "^[^<>]*$",
        "maxLength": 255,
        "default": "Etc/UTC"
	},
    "orderIdExpression": {
      "description": "'#' ++ now(format='yyyy-MM-dd', timezone='Antarctica/Troll') ++ \"#F$epochSecond-$orderWatchId:$1\"",
      "type": "string"
    },
    "delay": {
      "type": "integer",
      "format":"utc-millisec",
      "minimum": 1,
      "maximum": 9999
    }
  },
  "additionalProperties": false
}