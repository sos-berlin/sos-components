{
  "title": "job",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.sign.model.job.Job",
  "type": "object",
  "required": [
    "agentPath",
    "executable",
    "taskLimit"
  ],
  "description": "returnCodeMeaning is deprecated: moved to ShellScriptExecutable",
  "properties": {
    "agentPath": {
		"alias": "agentId,agentName",
    	"type": "string",
  		"pattern": "^[^<>]*$",
  		"maxLength": 255,
  		"minLength": 1
	},
	"executable": {
	  "javaType": "com.sos.inventory.model.job.Executable",
	  "oneOf": [
	    { "$ref": "../../../inventory/schemas/job/executableScript-schema.json" },
	    { "$ref": "../../../inventory/schemas/job/executableJava-schema.json" }
	  ]
	},
    "returnCodeMeaning": {
      "$ref": "../../../inventory/schemas/job/jobReturnCode-schema.json"
    },
    "parallelism": {
      "alias": "taskLimit",
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "timeout": {
      "$ref": "../../../inventory/schemas/common/nonNegativeInteger-schema.json"
    },
    "graceTimeout": {
      "$ref": "../../../inventory/schemas/common/nonNegativeInteger-schema.json"
    },
    "failOnErrWritten": {
    	"type": "boolean",
    	"default": false
    },
    "jobClass": {
      "$ref": "../../../inventory/schemas/common/path-schema.json"
    },
    "defaultArguments": {
      "$ref": "../../../inventory/schemas/common/variables-schema.json"
    },
    "jobResourcePaths": {
      "alias": "jobResourceNames",
      "type": "array",
      "items": {
        "$ref": "../../../inventory/schemas/common/string255-schema.json"
      }
    }
  },
  "additionalProperties": false
}