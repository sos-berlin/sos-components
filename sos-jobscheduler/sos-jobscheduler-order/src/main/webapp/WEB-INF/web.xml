<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>JobScheduler OrderInitiator</display-name>

	<servlet>
		<servlet-name>orderInitiator</servlet-name>
		<servlet-class>com.sos.webservices.order.initiator.OrderInitiatorServlet</servlet-class>

	 		<init-param>
			<param-name>order_configuration</param-name>
			<!-- relative to ${jetty.base} -->
			<!-- see sample src/test/resources/history_configuration.ini -->
			<param-value>order_configuration.ini</param-value>
		</init-param>
		<!-- temporary parameters end -->

		<load-on-startup>0</load-on-startup>	</servlet>
	<servlet-mapping>
		<servlet-name>orderInitiator</servlet-name>
		<url-pattern>/orderInitiator</url-pattern>
	</servlet-mapping>

</web-app>
