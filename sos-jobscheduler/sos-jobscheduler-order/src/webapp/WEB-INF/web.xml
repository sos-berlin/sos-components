<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>JobScheduler History</display-name>

	<servlet>
		<servlet-name>history</servlet-name>
		<servlet-class>com.sos.jobscheduler.history.master.servlet.HistoryServlet</servlet-class>

		<!-- temporary parameters start. TODO read from the ConfigurationService -->
		<init-param>
			<param-name>history_configuration</param-name>
			<!-- relative to ${jetty.base} -->
			<!-- see sample src/test/resources/history_configuration.ini -->
			<param-value>history_configuration.ini</param-value>
		</init-param>
		<!-- temporary parameters end -->

		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>history</servlet-name>
		<url-pattern>/history</url-pattern>
	</servlet-mapping>

</web-app>
